{
  "name": "desktop-widget-clock",
  "version": "0.1.0",
  "productName": "Desktop Widget Clock",
  "description": "Aplicação de relógio de widget para desktop.",
  "author": "Piktew Softwares <t-mowes@hotmail.com>",
  "main": "./out/main/index.js",
  "license": "AGPL-3.0-only",
  "type": "module",
  "scripts": {
    "lint": "biome check --write ./src",
    "typecheck": "tsc --noEmit",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "dev:w": "electron-vite dev --watch",
    "build": "npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "cleanup": "rm -rf out; rm -rf dist",
    "clear": "rm -rf out; rm -rf dist; rm -rf node_modules; rm bun.lock; bun install; bun pm trust --all",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win"
  },
  "dependencies": {
    "electron-store": "^11.0.2"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "@tailwindcss/vite": "^4.1.18",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "electron-vite": "^5.0.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "vite": "^7.3.0"
  }
}
